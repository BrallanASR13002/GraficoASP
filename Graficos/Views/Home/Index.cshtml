@{
    ViewData["Title"] = "Home Page";
}

<div class="row mt-2">
    <div class="col sm-6">
        <div class="card">
            <div class="card-header">Ventas de los ultimos 5 dias</div>
            <div class="card-body">
                <canvas id="chartVentas" style="max-height:250px"></canvas>
            </div>
        </div>

    </div>
    <div class="col sm-6">
        <div class="card">
            <div class="card-header">Producto mayor vendido</div>
            <div class="card-body">
                <canvas id="chartProductos" style="max-height:250px"></canvas>
            </div>
        </div>

    </div>
</div>

@section Scripts{
    <script>
        function ResumenVenta (){
            fetch("Home/Resumenventa") //esta parte del codigo nos esta permitiendo sincronizar el controlador con este apartado
            //las promesas sirven como las condicionales
                .then((response) => {
                    return response.ok ? response.json() : promise.reject(response);
                })
                .then((dataJson) => {
                    const labels = dataJson.map((item) => {return item.fecha })
                    const values = dataJson.map((item) => {return item.cantidad })
                    const data = {
                        labels: labels,
                        datasets: [{
                            label: 'Cantidad',
                            data: values,
                            data: [65, 59, 80, 81, 56, 55, 40],
                            backgroundColor: 'rgba(255, 205, 86, 0.2)',
                             borderWidth: 1
                            ],
                           
                    const config = {
                        type: 'bar',
                        data: data,
                        options: {
                            scales: {
                                y: {
                                    beginAtZero: true
                                }
                            }
                        },
                    };
                    const canvasBarras = document.getElementById("chartVentas")
                    const graficoBarras = new Chart(canvasBarras, config);
                })
        }
    </script>
}